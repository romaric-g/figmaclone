{
  "compilerOptions": {
    "outDir": "./lib",
    "sourceMap": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true
  },
  "include": [
    "./**/*.ts"
  ]
}